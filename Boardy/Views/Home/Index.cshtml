@{
    ViewBag.Title = "Home Page";
}

<h2>Categories</h2>
<br />

<div class="row">
    <div class="col-md-6">
        <div class="list-group">
            @foreach (var category in ViewBag.categories)
            {
                <a href="/Categories/View/@category.CategoryID" class="list-group-item">
                    <span class="badge">@category.Discussions.Count</span>
                    @category.Name
                </a>
            }
        </div>
    </div>
</div>
