
@{
    ViewBag.Title = "Post";
}

<h2>Add new Discussion in @ViewBag.category.Name</h2>
<br />

<form action="/Categories/Post" method="post">
    <input type="hidden" id="id" name="id" value="@ViewBag.category.CategoryID" />

    <div class="form-group">
        <input type="text" class="form-control" id="title" name="title" placeholder="Title.." />
    </div>

    <div class="form-group">
        <textarea id="text" rows="10" class="form-control" name="text" placeholder="Text.."></textarea>
    </div>

    <button type="submit" class="btn btn-default">Submit</button>
    <a href="/Categories/View/@ViewBag.category.CategoryID" class="btn btn-danger">Cancel</a>
</form>